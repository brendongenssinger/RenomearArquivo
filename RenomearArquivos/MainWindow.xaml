                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <TextBox x:Name="txtCaminho" HorizontalAlignment="Center" Height="23" Margin="6,73,1,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="304" FontFamily="Arial" FontWeight="Bold" IsReadOnly="True" VerticalContentAlignment="Center"/>

    </Grid>
</Window>
